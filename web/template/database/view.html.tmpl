{{define "content"}}
<div class="detail-page">
	<h1>{{.Title}}</h1>
	{{if .CurrentUser.HasPrivilege "databases.update"}}
		<a class="button-link" href="/admin/database/update/{{.Database.ID}}">Edit Database</a>
	{{end}}
	<div>
		<p>ID: {{.Database.ID}}</p>
		<p>Name: {{.Database.Name}}</p>
		<p>Created at: {{.Database.CreatedAt}}</p>
		<p>Updated at: {{.Database.UpdatedAt}}</p>
	</div>
</div>
{{end}}
